<?xml version="1.0" encoding="utf-8"?>
  <!--  MS2TriggerModel  TriggerModelID =  997  , 30초 지나면 시작 지점 바리케이트 트리거 박스 생성되어 길막 하도록 함-->
<ms2>
    <state name="대기" posX="420" posY="159">
        <onEnter>
            <action name="메쉬를설정한다" arg1="3001-3022" arg2="0" arg3="0" arg4="0" arg5="0" />   <!-- 시작지점 철창벽 셋팅 최초에는 숨김 설정-->	

        </onEnter>
			<condition name="몬스터가전투상태면" arg1="701,702,703">
				<transition state="카운트" />
			</condition>		

    </state>

	<state name="카운트">
		<onEnter>
			<action name="이벤트UI를설정한다" arg1="1" arg2="$02020130_BF__BARRICADE__0$" arg3="5500" />
		</onEnter>	
			<condition name="WaitTick" waitTick="30000" > 
				<transition state="차단"/> 
			</condition>
	</state>

    <state name="차단">
        <onEnter>
			<action name="메쉬를설정한다" arg1="3001-3022" arg2="1" arg3="1" arg4="1" arg5="1" />   <!-- 시작지점 철창벽 생성-->
        </onEnter>
			<condition name="몬스터가죽어있으면" arg1="701,702,703">>
				<transition state="차단해제" />
			</condition>
    </state>

    <state name="차단해제">
        <onEnter>
			<action name="메쉬를설정한다" arg1="3001-3022" arg2="0" arg3="0" arg4="0" arg5="0" />   <!-- 보스가 죽으면 시작지점 철창벽 제거-->	
        </onEnter>
    </state>

</ms2>